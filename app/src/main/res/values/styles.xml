<resources>
    <style name="DarkTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
    	<item name="android:textColor">#FFFAFAFA</item>
		<item name="android:itemBackground">#1F1B24</item>
	</style>
    <style name="LigthTheme" parent="@style/Theme.AppCompat.Light.NoActionBar"/>
    <style name="AppTheme" parent="@style/LigthTheme">
		<item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:colorBackgroundCacheHint">@null</item>
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowAnimationStyle">@android:style/Animation</item>
		<item name="android:windowDisablePreview">true</item>
    </style>
</resources>
