<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="?attr/selectableItemBackground"
	android:minHeight="48dp">
	
	<CheckBox
		android:id="@+id/ruleset_checkbox"
		android:layout_width="36dp"
		android:layout_height="36dp"
		android:padding="16dp"
		android:layout_centerInParent="true"
		android:layout_alignParentStart="true" />
	
	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/ruleset_name"
		android:layout_toEndOf="@id/ruleset_checkbox"
		android:layout_toStartOf="@id/ruleset_overflow_menu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:gravity="center"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:maxLines="1"
		android:textAppearance="?attr/textAppearanceSubtitle1"
		android:textColor="@color/mtrl_list_item_tint"/>

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/ruleset_url"
		android:layout_toEndOf="@id/ruleset_checkbox"
		android:layout_toStartOf="@id/ruleset_overflow_menu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:layout_below="@id/ruleset_name"
		android:gravity="center"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:breakStrategy="balanced"
		android:maxLines="2"
		android:ellipsize="end"
		android:textAppearance="?attr/textAppearanceBody2"
		android:textColor="@color/mtrl_list_item_tint"/>

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/ruleset_last_update"
		android:layout_toEndOf="@id/ruleset_checkbox"
		android:layout_toStartOf="@id/ruleset_overflow_menu"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:layout_below="@id/ruleset_url"
		android:gravity="center"
		android:layout_marginStart="8dp"
		android:layout_marginEnd="8dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:maxLines="1"
		android:textAppearance="?attr/textAppearanceBody2"
		android:textColor="@color/mtrl_list_item_tint"/>

	<com.google.android.material.textview.MaterialTextView
		android:id="@+id/ruleset_overflow_menu"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="?attr/selectableItemBackground"
		android:clickable="true"
		android:padding="16dp"
		android:textStyle="bold"
		android:text="&#8942;"
		android:textAppearance="?android:textAppearanceLarge"
		android:layout_centerInParent="true"
		android:layout_alignParentEnd="true" />

</RelativeLayout>
